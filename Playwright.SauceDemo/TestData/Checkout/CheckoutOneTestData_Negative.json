    "testCases": [
        {
            "id": "TC_Checkout_0006",
            "description": "Checkout step one: Error message appears when both 'Last Name' and 'Postal Code' are empty.",
            "type": "invalid_input",
            "data": {
                "firstName": "Standard User First Name",
                "lastName": "",
                "postalCode": ""
            },
            "expectedResult": {
                "success": false,
                "message": "Checkout step one fails when provided with missing data.",
                "fieldErrors": [
                    {
                        "field": "lastName",
                        "message": "Required"
                    },
                    {
                        "field": "postalCode",
                        "message": "Required"
                    }
                ]
            }
        },
